{
  "name": "fyllo-lending-contracts",
  "version": "0.0.1",
  "description": "fyllo-lending-contracts",
  "main": "index.js",
  "files": [
    "abi",
    "artifacts",
    "contracts",
    "deployments"
  ],
  "scripts": {
    "hc": "hardhat compile",
    "fc": "forge build",
    "clean": "hardhat clean && rm -rf build/ cache/ coverage* dist/",
    "size-contracts": "hardhat size-contracts",
    "so": "hardhat run scripts/storage_export.ts",
    "storage": "hardhat check",
    "ht": "hardhat test",
    "ft": "forge test",
    "coverage": "hardhat coverage",
    "lint": "eslint 'plugins/**/*' 'scenario/**/*' 'scripts/**/*' 'src/**/*' 'tasks/**/*' 'test/**/*'",
    "lint:js": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --check",
    "lint:js:fix": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --write",
    "lint:sol": "prettier --loglevel warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --check && solhint --config .solhint.json --ignore-path .solhintignore -f table '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "prettier --loglevel warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --write --check",
    "size": "hardhat size-contracts"
  },
  "repository": "https://github.com/FylloFinance/fyllo-lending-contracts.git",
  "license": "BSD 3-Clause",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/node": "^20.5.6",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "eth-gas-reporter": "^0.2.22",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.26",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-storage-layout-json": "^0.0.3",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  }
}
